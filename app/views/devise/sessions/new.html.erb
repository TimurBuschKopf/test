<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
<%= f.error_notification %>

<h2 class="text-center">Log in</h2>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", html_input: {class: "form-control"} %>
    <%= f.input :password, required: true, label: false, placeholder: "Password" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, "Log in", class: "btn btn-danger btn btn-block" %>
  </div>
<% end %>

<h4 class="text-center">
	<%= render "devise/shared/links" %>
</h4>
